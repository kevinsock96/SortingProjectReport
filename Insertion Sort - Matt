#include <iostream>
#include <bits/stdc++.h>

//Sorting function using the insertion sort algorithm
void insertionSort(int arr[], int n) {
	int i, k, j;
	for (i = 1; i < n; i++) {
		k = arr[i];
		j = i - 1;
		//Moves elements greater than k to a position ahead of the current
		while (j >= 0 && arr[j] > k) {
			arr[j + 1] = arr[j];
			j = j - 1;
		}
		arr[j + 1] = k;
	}
}

//Function created to print out and test the array
void printArray(int arr[], int n) {
	for (int i = 0; i < n; i++) {
		std::cout << arr[i] << " ";
	}
	std::cout << std::endl;
}

//Main function to test other functions 
int main() {
	int arr[] = { 12, 11, 13, 5, 6 };
	int n = sizeof(arr) / sizeof(arr[0]);
	insertionSort(arr, n);
	printArray(arr, n);
	return 0;
}
